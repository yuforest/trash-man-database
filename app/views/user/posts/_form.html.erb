<%= form_with model: [:user, @post], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.rich_text_area :content %>
  </div>
  <div class="form-group">
    <%= f.submit '送信', class: 'btn btn-primary' %>
  </div>
<% end %>