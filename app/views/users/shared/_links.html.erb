<div class="d-flex my-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログインする", new_session_path(resource_name), class: "badge badge-success mr-2" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "会員登録する", new_registration_path(resource_name), class: "badge badge-primary mr-2" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れた時", new_password_path(resource_name), class:"badge badge-warning mr-2" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届かない時", new_confirmation_path(resource_name), class:"badge badge-warning mr-2" %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログインする", user_twitter_omniauth_authorize_path(resource_name, provider), class:"badge badge-info mr-2" %><br />
    <% end %>
  <% end %>

</div>