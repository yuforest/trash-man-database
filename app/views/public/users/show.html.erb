<div class="container mt-4">
  <section class="my-4">
    <h2 class="display-4">
      <%= @profile.name %>さんのプロフィール
    </h2>
    <div class="d-flex align-items-center">
      <%= image_tag(@profile.image.thumb.url, class: "rounded-circle w-70px") if @profile.image.present? %>
    </div>
    <div class="mt-3">
      <%= @profile.biography %>
    </div>
    <div class="mt-3 pt-2 border-top border-primary">
      <h3>投稿一覧</h3>
      <% @posts.each do |post| %>
        <%= render "shared/components/post_list_item", post: post %>
      <% end %>
      <%= paginate @posts %>
    </div>
  </section>
</div>