<div class="container mt-4">
  <section class="my-4">
    <h2 class="display-4">
      <%= @post.title %>
    </h2>
    <div class="d-flex align-items-center">
      <img src="/argon/assets/img/faces/team-4.jpg" class="rounded-circle w-70px">
      <p class="ml-2 mb-0">サイゼさん</p>
    </div>
    <div class="mt-3">
      <%= @post.content %>
    </div>
    <div class="mt-3 pt-2 border-top border-primary">
      <div>
        <i class="fas fa-eye mr-1"></i>
        <%= number_with_delimiter(@page_views) %>
      </div>
    </div>
    <div class="mt-3">
      <h4>みんなのコメント</h4>
      <div id="comment_box">
        <%= render "shared/components/comment_box", comment: @new_comment %>
      </div>
      <div id="comment_list">
        <%= render "shared/components/comment_list", comments: @comments %>
      </div>
    </div>
  </section>
</div>