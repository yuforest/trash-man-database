<% set_meta_tags title: "",
                 description: "クズ男でデータベースは日常生活の中でクズだと思った男性について個人の中傷にならない範囲で情報を共有する投稿サイトです。",
                 og: {
                   title: "クズ男データベース",
                   description: "クズ男でデータベースは日常生活の中でクズだと思った男性について個人の中傷にならない範囲で情報を共有する投稿サイトです。",
                   image: image_url("top-ogp.jpg")
                 }
%>
<div class="container mt-4">
  <section class="my-4">
    <h2 class="display-4">新着のクズ男体験談</h2>
    <% @new_posts.each do |post| %>
      <%= render "shared/components/post_list_item", post: post %>
    <% end %>
    <div class="text-center mt-3">
      <%= link_to "もっと見る", posts_path, class: "btn btn-primary" %>
    </div>
  </section>
  <section class="my-4">
    <h2 class="display-4">みんなが見ているクズ男体験談</h2>
    <% @popular_posts.each do |post| %>
      <%= render "shared/components/post_list_item", post: post %>
    <% end %>
    <div class="text-center mt-3">
      <%= link_to "もっと見る", posts_path, class: "btn btn-primary" %>
    </div>
  </section>
</div>